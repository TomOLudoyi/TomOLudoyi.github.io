{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": {"type": "fit", "contains": "padding", "resize": false},
  "background": "#ffffff",
  "padding": 5,
  "height": 250,
  "title": {
    "text": "Population of Nigeria throughout the years",
    "anchor": "start",
    "subtitle": "Source: NBS (WB) through ECO API",
    "fontSize": "14",
    "subtitleFontSize": "8",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "style": "cell",
  "encode": {
    "update": {"fill": {"value": "#ffffff"}, "strokeOpacity": {"value": 0}}
  },
  "data": [
    {
      "name": "source_0",
      "url": "https://api.economicsobservatory.com/nga/popu?vega",
      "format": {"type": "json", "parse": {"date": "date"}}
    }
  ],
  "signals": [
    {
      "name": "width",
      "init": "isFinite(containerSize()[0]) ? containerSize()[0] : 200",
      "on": [
        {
          "update": "isFinite(containerSize()[0]) ? containerSize()[0] : 200",
          "events": "window:resize"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "x"},
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "strokeWidth": {"value": "2"},
          "stroke": {"value": "#f4134d"},
          "description": {
            "signal": "\"date: \" + (timeFormat(datum[\"date\"], '%b %d, %Y')) + \"; value: \" + (format(datum[\"value\"], \"\"))"
          },
          "x": {"scale": "x", "field": "date"},
          "y": {"scale": "y", "field": "value"},
          "defined": {
            "signal": "isValid(datum[\"date\"]) && isFinite(+datum[\"date\"]) && isValid(datum[\"value\"]) && isFinite(+datum[\"value\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "date"},
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {"data": "source_0", "field": "value"},
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "titleColor": "#122B39",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Nigerian Citizens",
      "titleColor": "#122B39",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {}
}