{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
      "description": "Police Crime chart",
  
      "title": {
       "text": "Crime at the Bear Pit",
       "anchor": "start",
       "color": "black",
       "subtitle":"Recent crime by type of offence. Source: Police API.",
       "subtitleFontStyle":"italic",
       "subtitleFontSize":10,
       "subtitleColor":"black"
    },
   
    "data": {"url": "https://data.police.uk/api/crimes-street/all-crime?lat=51.4594888&lng=-2.5907564"},
  
    "transform": [
      {"calculate":"1", "as":"crime"}
    ],
  
    "width":300,
    "height":300,
      
    "mark": {
      "type": "arc", 
      "innerRadius": 80},
         
    "encoding": {
      
      "theta": {
        "aggregate": "sum",
        "field": "crime", 
        "type": "quantitative"},
      
      "color": {
        "field": "category", 
        "type": "nominal",
        "scale":{"scheme":"viridis"},
        "legend":{
          "title":null
        }
      }
    }
  }