{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "Price of BitCoin in different currencies. Uses a 'fold' transform to get the data into long-format. Axis uses a label expression to only show the first 3 characters of the currency",
      
    "data": {
      "url": "https://api.coindesk.com/v1/bpi/currentprice.json",
      "format":{
        "type":"json",
        "property": "bpi"
      }},

    "transform": [
      {
        "fold": ["USD.rate_float", "GBP.rate_float", "EUR.rate_float"],
        "as": ["currency", "btc"]
      }
    ],
   
    
    "mark": {
      "type": "bar"
    },
  
    "width":350,
    
    "encoding": {
      "x": {
        "field": "currency",
        "type": "nominal",
        "axis": {
          "labelExpr": "slice(datum.label,0,3)"
        }
      },
      "y": {
        "field": "btc",
        "type": "quantitative"
      }
    }
  }